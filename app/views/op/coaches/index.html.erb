<div class="pageheader">
  <h2><i class="fa fa-list"></i> 教练管理 <span>列表</span></h2>
</div>
<div class="contentpanel">
  <%= brac_flash %>
  <div class="table-responsive">
    <table class="table table-primary table-bordered table-striped mb30">
      <thead>
        <tr>
          <th><%= brac_arat 'coach.phone' %></th>
          <th><%= brac_arat 'coach.name' %></th>
          <th><%= brac_arat 'coach.title' %></th>
          <th><%= brac_arat 'coach.starting_price' %></th>
          <th></th>
        </tr>
      </thead>
      <tfoot>
        <tr>
          <td colspan="5" class="table-paginate"><%= brac_paginate @coaches %></td>
        </tr>
      </tfoot>
      <tbody>
        <% @coaches.each do |coach| %>
        <tr>
          <td><%= coach.name %></td>
          <td><%= coach.name %></td>
          <td><%= coach.title %></td>
          <td><%= brac_price(coach.starting_price) %></td>
          <td class="table-action">
            <%= link_to raw('<i class="fa fa-file-text-o"></i>'), coach %>
            <%= link_to raw('<i class="fa fa-pencil"></i>'), edit_coach_path(coach) %>
          </td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>