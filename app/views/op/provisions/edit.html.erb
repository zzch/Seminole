<div class="pageheader">
  <h2><i class="fa fa-pencil-square-o"></i> 餐饮管理 <span>编辑</span></h2>
</div>
<div class="contentpanel">
  <%= render "op/commons/error_messages", target: @provision %>
  <div class="panel panel-default">
    <%= form_for @provision, html: { class: 'form-horizontal form-bordered' } do |f| %>
      <div class="panel-body panel-body-nopadding">
        <div class="form-group">
          <label class="col-sm-3 control-label"><%= brac_arat 'provision.category' %> <span class="asterisk">*</span></label>
          <div class="col-sm-6">
            <%= f.collection_select :category_id, @current_club.provision_categories, :id, :name, class: 'form-control' %>
          </div>
        </div>
        <div class="form-group">
          <label class="col-sm-3 control-label"><%= brac_arat 'provision.serial_number' %></label>
          <div class="col-sm-6">
            <%= f.text_field :serial_number, class: 'form-control' %>
          </div>
        </div>
        <div class="form-group">
          <label class="col-sm-3 control-label"><%= brac_arat 'provision.name' %> <span class="asterisk">*</span></label>
          <div class="col-sm-6">
            <%= f.text_field :name, class: 'form-control' %>
          </div>
        </div>
        <div class="form-group">
          <label class="col-sm-3 control-label"><%= brac_arat 'provision.image' %></label>
          <div class="col-sm-6">
            <%= f.file_field :image, class: 'form-control' %>
          </div>
        </div>
        <div class="form-group">
          <label class="col-sm-3 control-label"><%= brac_arat 'provision.price' %> <span class="asterisk">*</span></label>
          <div class="col-sm-6">
            <%= f.text_field :price, class: 'form-control' %>
          </div>
        </div>
        <div class="form-group">
          <label class="col-sm-3 control-label"><%= brac_arat 'provision.description' %></label>
          <div class="col-sm-6">
            <%= f.text_area :description, class: 'form-control' %>
          </div>
        </div>
        <div class="form-group">
          <div class="col-sm-12 text-center">
            <%= f.submit '提交', class: 'btn btn-primary' %>&nbsp;
            <%= link_to '返回', @provision, class: 'btn btn-default' %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
<% content_for :javascript do %>
  <script>
    jQuery(document).ready(function(){
      $('#provision_category_id').chosen({'width': '100%', 'white-space': 'nowrap'});
    });
  </script>
<% end %>