<div class="pageheader">
  <h2><i class="fa fa-pencil-square-o"></i> 会员管理 <span>编辑</span></h2>
</div>
<div class="contentpanel">
  <%= render "op/commons/error_messages", target: @member %>
  <div class="panel panel-default">
    <%= form_for @member, html: { class: 'form-horizontal form-bordered' } do |f| %>
      <div class="panel-body panel-body-nopadding">
        <div class="form-group">
          <label class="col-sm-3 control-label"><%= brac_arat 'member.card' %> <span class="asterisk">*</span></label>
          <div class="col-sm-6">
            <%= f.collection_select :card_id, @current_club.cards.by_type(@member.card.type), :id, :name_with_latest_number %>
          </div>
        </div>
        <div class="form-group">
          <label class="col-sm-3 control-label"><%= brac_arat 'member.number' %> <span class="asterisk">*</span></label>
          <div class="col-sm-6">
            <%= f.text_field :number, class: 'form-control' %>
          </div>
        </div>
        <div class="form-group">
          <label class="col-sm-3 control-label"><%= brac_arat 'member.salesman' %></label>
          <div class="col-sm-6">
            <%= f.select :salesman_id, salesmen_options, include_blank: '无' %>
          </div>
        </div>
        <div class="form-group">
          <label class="col-sm-3 control-label"><%= brac_arat 'member.created_at' %></label>
          <div class="col-sm-6">
            <div class="input-group">
              <%= f.text_field :created_at_date, value: brac_date(@member.created_at), class: 'form-control' %>
              <span class="input-group-addon"><i class="glyphicon glyphicon-calendar"></i></span>
            </div>
          </div>
        </div>
        <div class="form-group">
          <label class="col-sm-3 control-label"><%= brac_arat 'member.expired_at' %></label>
          <div class="col-sm-6">
            <div class="input-group">
              <%= f.text_field :expired_at_date, value: brac_date(@member.expired_at), class: 'form-control' %>
              <span class="input-group-addon"><i class="glyphicon glyphicon-calendar"></i></span>
            </div>
          </div>
        </div>
        <div class="form-group">
          <div class="col-sm-12 text-center">
            <%= f.submit '提交', class: 'btn btn-primary' %>&nbsp;
            <%= link_to '返回', @member, class: 'btn btn-default' %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
<% content_for :javascript do %>
  <script>
    jQuery(document).ready(function(){
      $('#member_card_id').chosen({'width': '100%', 'white-space': 'nowrap'});
      $('#member_salesman_id').chosen({'width': '100%', 'white-space': 'nowrap'});
      $('#member_created_at_date').datepicker({dateFormat: 'yy-mm-dd'});
      $('#member_expired_at_date').datepicker({dateFormat: 'yy-mm-dd'});
    });
  </script>
<% end %>