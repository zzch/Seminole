<div class="pageheader">
  <h2><i class="fa fa-file-text-o"></i> 会员管理 <span>查看</span></h2>
</div>
<div class="contentpanel">
  <%= brac_flash %>
  <div class="panel">
    <%= form_tag nil, class: 'form-horizontal form-bordered' do %>
      <div class="panel-body panel-body-nopadding">
        <div class="form-group">
          <label class="col-sm-3 control-label"><%= brac_arat 'member.type' %></label>
          <div class="col-sm-6">
            <%= text_field_tag nil, @member.type, readonly: true, class: 'form-control' %>
          </div>
        </div>
        <div class="form-group">
          <label class="col-sm-3 control-label"><%= brac_arat 'user.name' %></label>
          <div class="col-sm-6">
            <%= text_field_tag nil, @member.user.name, readonly: true, class: 'form-control' %>
          </div>
        </div>
        <div class="form-group">
          <label class="col-sm-3 control-label"><%= brac_arat 'user.phone' %></label>
          <div class="col-sm-6">
            <%= text_field_tag nil, @member.user.phone, readonly: true, class: 'form-control' %>
          </div>
        </div>
        <div class="form-group">
          <label class="col-sm-3 control-label"><%= brac_arat 'user.gender' %></label>
          <div class="col-sm-6">
            <%= text_field_tag nil, @member.user.gender, readonly: true, class: 'form-control' %>
          </div>
        </div>
      </div>
    <% end %>
    <div class="panel-footer">
      <%= link_to '返回', members_path, class: 'btn btn-default' %>
    </div>
  </div>
</div>