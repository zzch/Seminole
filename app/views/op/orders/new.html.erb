<div class="pageheader">
  <h2><i class="fa fa-pencil-square-o"></i> 消费单管理 <span>新建</span></h2>
</div>
<div class="contentpanel">
  <%= render "op/commons/error_messages", target: @order %>
  <div class="panel panel-default">
    <%= form_for @order, html: { class: 'form-horizontal form-bordered' } do |f| %>
      <div class="panel-body panel-body-nopadding">
        <% if @tee %>
        <div class="form-group">
          <label class="col-sm-3 control-label"><%= brac_arat 'order.tee' %></label>
          <div class="col-sm-6">
            <%= text_field_tag nil, @tee.name, readonly: true, class: 'form-control' %>
          </div>
        </div>
        <% end %>
        <div class="form-group">
          <label class="col-sm-3 control-label"><%= brac_arat 'order.member' %></label>
          <div class="col-sm-6">
            <%= f.collection_select :member_id, @members, :id, :name_with_initial_and_phone, prompt: '请选择会员', class: 'form-control' %>
          </div>
        </div>
        <div class="form-group">
          <div class="col-sm-12 text-center">
            <%= f.submit '提交', class: 'btn btn-primary' %>&nbsp;
            <%= link_to '返回', dashboard_path, class: 'btn btn-default' %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
<% content_for :javascript do %>
  <script>
    jQuery(document).ready(function(){
      $('#order_member_id').chosen({'width': '100%', 'white-space': 'nowrap'});
    });
  </script>
<% end %>