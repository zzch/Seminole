<div class="pageheader">
  <h2><i class="fa fa-pencil-square-o"></i> 公告管理 <span>新建</span></h2>
</div>
<div class="contentpanel">
  <%= render "op/commons/error_messages", target: @announcement %>
  <div class="panel panel-default">
    <%= form_for @announcement, html: { class: 'form-horizontal form-bordered' } do |f| %>
      <div class="panel-body panel-body-nopadding">
        <div class="form-group">
          <label class="col-sm-3 control-label"><%= brac_arat 'announcement.title' %> <span class="asterisk">*</span></label>
          <div class="col-sm-6">
            <%= f.text_field :title, class: 'form-control' %>
          </div>
        </div>
        <div class="form-group">
          <label class="col-sm-3 control-label"><%= brac_arat 'announcement.content' %> <span class="asterisk">*</span></label>
          <div class="col-sm-6">
            <%= f.text_area :content, class: 'form-control' %>
          </div>
        </div>
        <div class="form-group">
          <div class="col-sm-12 text-center">
            <%= f.submit '提交', class: 'btn btn-primary' %>&nbsp;
            <%= link_to '返回', announcements_path, class: 'btn btn-default' %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>