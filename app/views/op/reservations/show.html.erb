<div class="pageheader">
  <h2><i class="fa fa-file-text-o"></i> 预约管理 <span>查看</span></h2>
</div>
<div class="contentpanel">
  <%= brac_flash %>
  <div class="panel">
    <%= form_tag nil, class: 'form-horizontal form-bordered' do %>
      <div class="panel-body panel-body-nopadding">
        <div class="form-group">
          <label class="col-sm-3 control-label"><%= brac_arat 'reservation.user' %></label>
          <div class="col-sm-6">
            <%= text_field_tag nil, @reservation.user.name, readonly: true, class: 'form-control' %>
          </div>
        </div>
        <div class="form-group">
          <label class="col-sm-3 control-label"><%= brac_arat 'reservation.vacancy' %></label>
          <div class="col-sm-6">
            <%= text_field_tag nil, (@reservation.vacancy.try(:name) || '不限'), readonly: true, class: 'form-control' %>
          </div>
        </div>
        <div class="form-group">
          <label class="col-sm-3 control-label"><%= brac_arat 'reservation.will_playing_at' %></label>
          <div class="col-sm-6">
            <%= text_field_tag nil, brac_datetime(@reservation.will_playing_at), readonly: true, class: 'form-control' %>
          </div>
        </div>
      </div>
    <% end %>
    <div class="panel-footer">
      <%= link_to '返回', reservations_path, class: 'btn btn-default' %>&nbsp;
      <%= link_to '编辑', edit_reservation_path(@reservation), class: 'btn btn-primary' %>&nbsp;
      <%= link_to '删除', @reservation, method: :delete, data: { confirm: '确定要删除该预约吗？' }, class: 'btn btn-danger' %>&nbsp;
    </div>
  </div>
</div>