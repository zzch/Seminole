<div class="pageheader">
  <h2><i class="fa fa-file-text-o"></i> 打位管理 <span>查看</span></h2>
</div>
<div class="contentpanel">
  <%= brac_flash %>
  <div class="panel">
    <%= form_tag nil, class: 'form-horizontal form-bordered' do %>
      <div class="panel-body panel-body-nopadding">
        <div class="form-group">
          <label class="col-sm-3 control-label"><%= brac_arat 'vacancy.name' %></label>
          <div class="col-sm-6">
            <%= text_field_tag nil, @vacancy.name, readonly: true, class: 'form-control' %>
          </div>
        </div>
        <div class="form-group">
          <label class="col-sm-3 control-label"><%= brac_arat 'vacancy.tags' %></label>
          <div class="col-sm-6 vacancy-tags">
            <%= vacancy_tags(@vacancy.tags) %>
          </div>
        </div>
        <div class="form-group">
          <label class="col-sm-3 control-label"><%= brac_arat 'vacancy.location' %></label>
          <div class="col-sm-6">
            <%= text_field_tag nil, te_vacancy_location(@vacancy.location), readonly: true, class: 'form-control' %>
          </div>
        </div>
        <div class="form-group">
          <label class="col-sm-3 control-label"><%= brac_arat 'vacancy.state' %></label>
          <div class="col-sm-6">
            <%= text_field_tag nil, @vacancy.aasm.human_state, readonly: true, class: 'form-control' %>
          </div>
        </div>
        <div class="form-group">
          <label class="col-sm-3 control-label"><%= brac_arat 'vacancy.price_per_hour' %></label>
          <div class="col-sm-3">
            <div class="input-group">
              <span class="input-group-addon"><%= brac_arat 'vacancy.usual_price' %></span>
              <%= text_field_tag nil, brac_price(@vacancy.usual_price_per_hour), readonly: true, class: 'form-control' %>
            </div>
          </div>
          <div class="col-sm-3">
            <div class="input-group">
              <span class="input-group-addon"><%= brac_arat 'vacancy.holiday_price' %></span>
              <%= text_field_tag nil, brac_price(@vacancy.holiday_price_per_hour), readonly: true, class: 'form-control' %>
            </div>
          </div>
        </div>
        <div class="form-group">
          <label class="col-sm-3 control-label"><%= brac_arat 'vacancy.price_per_ball' %></label>
          <div class="col-sm-3">
            <div class="input-group">
              <span class="input-group-addon"><%= brac_arat 'vacancy.usual_price' %></span>
              <%= text_field_tag nil, brac_price(@vacancy.usual_price_per_ball), readonly: true, class: 'form-control' %>
            </div>
          </div>
          <div class="col-sm-3">
            <div class="input-group">
              <span class="input-group-addon"><%= brac_arat 'vacancy.holiday_price' %></span>
              <%= text_field_tag nil, brac_price(@vacancy.holiday_price_per_ball), readonly: true, class: 'form-control' %>
            </div>
          </div>
        </div>
      </div>
    <% end %>
    <div class="panel-footer">
      <%= link_to '返回', vacancies_path, class: 'btn btn-default' %>&nbsp;
      <%= link_to '编辑', edit_vacancy_path(@vacancy), class: 'btn btn-primary' %>&nbsp;
      <div class="btn-group mt10">
        <button type="button" class="btn btn-success dropdown-toggle" data-toggle="dropdown">
          操作 <span class="caret"></span>
        </button>
        <ul class="dropdown-menu" role="menu">
          <%= content_tag :li, link_to('开放打位', open_vacancy_path(@vacancy), method: :put) if @vacancy.closed? %>
          <%= content_tag :li, link_to('关闭打位', close_vacancy_path(@vacancy), method: :put) if @vacancy.opened?  %>
        </ul>
      </div>
    </div>
  </div>
</div>