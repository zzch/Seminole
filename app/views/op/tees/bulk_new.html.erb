<div class="pageheader">
  <h2><i class="fa fa-pencil-square-o"></i> 打位管理 <span>批量新建</span></h2>
</div>
<div class="contentpanel">
  <%= render "op/commons/error_messages", target: @nar_form %>
  <div class="panel panel-default">
    <%= form_for @nar_form, url: bulk_create_tees_path, html: { class: 'form-horizontal form-bordered' } do |f| %>
      <div class="panel-body panel-body-nopadding">
        <div class="form-group">
          <label class="col-sm-3 control-label"><%= brac_amat 'op/bulk_create_tees.prefix' %></label>
          <div class="col-sm-6">
            <%= f.text_field :prefix, class: 'form-control' %>
          </div>
        </div>
        <div class="form-group">
          <label class="col-sm-3 control-label"><%= brac_amat 'op/bulk_create_tees.start_number' %></label>
          <div class="col-sm-6">
            <%= f.text_field :start_number, class: 'form-control' %>
          </div>
        </div>
        <div class="form-group">
          <label class="col-sm-3 control-label"><%= brac_amat 'op/bulk_create_tees.end_number' %></label>
          <div class="col-sm-6">
            <%= f.text_field :end_number, class: 'form-control' %>
          </div>
        </div>
        <div class="form-group">
          <label class="col-sm-3 control-label"><%= brac_arat 'tee.floor' %></label>
          <div class="col-sm-6">
            <%= f.select :floor, 1..@current_club.floors, class: 'form-control' %>
          </div>
        </div>
        <div class="form-group">
          <div class="col-sm-12 text-center">
            <%= submit_tag '提交', class: 'btn btn-primary' %>&nbsp;
            <%= link_to '返回', tees_path, class: 'btn btn-default' %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
<% content_for :javascript do %>
  <script>
    jQuery(document).ready(function(){
      $('#op_bulk_create_tees_floor').chosen({'width': '100%', 'white-space': 'nowrap'});
    });
  </script>
<% end %>