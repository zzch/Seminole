<div class="pageheader">
  <h2><i class="fa fa-pencil-square-o"></i> 学员管理 <span>新建</span></h2>
</div>
<div class="contentpanel">
  <%= render "op/commons/error_messages", target: @student %>
  <div class="panel panel-default">
    <%= form_for @student, html: { class: 'form-horizontal form-bordered' } do |f| %>
      <div class="panel-body panel-body-nopadding">
        <div class="form-group">
          <label class="col-sm-3 control-label"><%= brac_arat 'student.user' %> <span class="asterisk">*</span></label>
          <div class="col-sm-6">
            <%= f.select :user_id, user_options, prompt: '请选择' %>
          </div>
        </div>
        <div class="form-group">
          <label class="col-sm-3 control-label"><%= brac_arat 'student.course' %> <span class="asterisk">*</span></label>
          <div class="col-sm-6">
            <%= f.select :course_id, courses_options, prompt: '请选择' %>
          </div>
        </div>
        <div class="form-group">
          <div class="col-sm-12 text-center">
            <%= f.submit '提交', class: 'btn btn-primary' %>&nbsp;
            <%= link_to '返回', students_path, class: 'btn btn-default' %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
<% content_for :javascript do %>
  <script>
    jQuery(document).ready(function(){
      $('#student_user_id').chosen({'width': '100%', 'white-space': 'nowrap'});
      $('#student_course_id').chosen({'width': '100%', 'white-space': 'nowrap'});
    });
  </script>
<% end %>