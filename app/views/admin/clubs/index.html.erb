<div class="pageheader">
  <h2><i class="fa fa-list"></i> 俱乐部管理 <span>列表</span></h2>
</div>
<div class="contentpanel">
  <%= brac_flash %>
  <div class="row">
    <div class="col-md-12">
      <div class="table-responsive">
        <table class="table table-primary table-striped mb30">
          <thead>
            <tr>
              <th><%= brac_arat 'club.name' %></th>
              <th><%= brac_arat 'club.code' %></th>
              <th></th>
            </tr>
          </thead>
          <tfoot>
            <tr>
              <td colspan="3" class="table-paginate"><%= brac_paginate @clubs %></td>
            </tr>
          </tfoot>
          <tbody>
            <% @clubs.each do |club| %>
            <tr>
              <td><%= club.name %></td>
              <td><%= club.code %></td>
              <td class="table-action">
                <%= link_to raw('<i class="fa fa-file-text-o"></i>'), [:admin, club] %>
                <%= link_to raw('<i class="fa fa-pencil"></i>'), edit_admin_club_path(club) %>
              </td>
            </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>