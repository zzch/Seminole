<div class="pageheader">
  <h2><i class="fa fa-file-text-o"></i> 版本管理 <span>查看</span></h2>
</div>
<div class="contentpanel">
  <%= brac_flash %>
  <div class="panel">
    <%= form_tag nil, class: 'form-horizontal form-bordered' do %>
      <div class="panel-body panel-body-nopadding">
        <div class="form-group">
          <label class="col-sm-3 control-label"><%= brac_arat 'version.name' %></label>
          <div class="col-sm-6">
            <%= text_field_tag nil, @version.name, readonly: true, class: 'form-control' %>
          </div>
        </div>
        <div class="form-group">
          <label class="col-sm-3 control-label"><%= brac_arat 'version.build' %></label>
          <div class="col-sm-6">
            <%= text_field_tag nil, @version.build, readonly: true, class: 'form-control' %>
          </div>
        </div>
        <div class="form-group">
          <label class="col-sm-3 control-label"><%= brac_arat 'version.content' %></label>
          <div class="col-sm-6">
            <%= text_area_tag nil, @version.content, readonly: true, class: 'form-control' %>
          </div>
        </div>
        <div class="form-group">
          <label class="col-sm-3 control-label"><%= brac_arat 'version.state' %></label>
          <div class="col-sm-6">
            <%= text_field_tag nil, @version.state, readonly: true, class: 'form-control' %>
          </div>
        </div>
      </div>
    <% end %>
    <div class="panel-footer">
      <%= link_to '返回', admin_versions_path, class: 'btn btn-default' %>&nbsp;
      <%= link_to '编辑', edit_admin_version_path(@version), class: 'btn btn-primary' %>
    </div>
  </div>
</div>