<div class="pageheader">
  <h2><i class="fa fa-list"></i> 错误管理 <span>列表</span></h2>
</div>
<div class="contentpanel">
  <%= brac_flash %>
  <div class="row">
    <div class="col-md-12">
      <div class="table-responsive">
        <table class="table table-primary table-striped mb30">
          <thead>
            <tr>
              <th><%= brac_arat 'service_exception.created_at' %></th>
              <th><%= brac_arat 'service_exception.module' %></th>
              <th><%= brac_arat 'service_exception.message' %></th>
              <th></th>
            </tr>
          </thead>
          <tfoot>
            <tr>
              <td colspan="5" class="table-paginate"><%= brac_paginate @service_exceptions %></td>
            </tr>
          </tfoot>
          <tbody>
            <% @service_exceptions.each do |service_exception| %>
            <tr>
              <td><%= brac_datetime(service_exception.created_at) %></td>
              <td><%= service_exception.module %></td>
              <td><%= service_exception.message.truncate(60) %></td>
              <td class="table-action">
                <%= link_to raw('<i class="fa fa-file-text-o"></i>'), [:admin, service_exception] %>
              </td>
            </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>