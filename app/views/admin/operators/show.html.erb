<div class="pageheader">
  <h2><i class="fa fa-file-text-o"></i> 操作员管理 <span>查看</span></h2>
</div>
<div class="contentpanel">
  <%= brac_flash %>
  <div class="panel">
    <%= form_tag nil, class: 'form-horizontal form-bordered' do %>
      <div class="panel-body panel-body-nopadding">
        <div class="form-group">
          <label class="col-sm-3 control-label"><%= brac_arat 'operator.account' %></label>
          <div class="col-sm-6">
            <%= text_field_tag nil, @operator.account, readonly: true, class: 'form-control' %>
          </div>
        </div>
        <div class="form-group">
          <label class="col-sm-3 control-label"><%= brac_arat 'operator.name' %></label>
          <div class="col-sm-6">
            <%= text_field_tag nil, @operator.name, readonly: true, class: 'form-control' %>
          </div>
        </div>
        <div class="form-group">
          <label class="col-sm-3 control-label"><%= brac_arat 'operator.omnipotent' %></label>
          <div class="col-sm-6">
            <%= text_field_tag nil, @operator.omnipotent?, readonly: true, class: 'form-control' %>
          </div>
        </div>
        <div class="form-group">
          <label class="col-sm-3 control-label"><%= brac_arat 'operator.last_signed_in_at' %></label>
          <div class="col-sm-6">
            <%= text_field_tag nil, @operator.last_signed_in_at, readonly: true, class: 'form-control' %>
          </div>
        </div>
        <div class="form-group">
          <label class="col-sm-3 control-label"><%= brac_arat 'operator.state' %></label>
          <div class="col-sm-6">
            <%= text_field_tag nil, @operator.state, readonly: true, class: 'form-control' %>
          </div>
        </div>
      </div>
    <% end %>
    <div class="panel-footer">
      <%= link_to '返回', [:admin, @operator.club], class: 'btn btn-default' %>&nbsp;
      <%= link_to '编辑', edit_admin_operator_path(@operator), class: 'btn btn-primary' %>
    </div>
  </div>
</div>